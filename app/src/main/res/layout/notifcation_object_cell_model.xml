<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title"
        android:id="@+id/notificationObjectTitleLabel"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/notificationObjectImageView"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Description"
        android:id="@+id/notificationObjecDescriptionLabel"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/notificationObjectTitleLabel"
        android:layout_alignLeft="@id/notificationObjectTitleLabel"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Time"
        android:id="@+id/notificationObjecTimeLabel"
        android:layout_alignBaseline="@+id/notificationObjecDescriptionLabel"
        android:layout_alignParentRight="true"
        android:paddingRight="50dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/notificationObjectImageView"
        android:layout_centerVertical="true" />

</RelativeLayout>