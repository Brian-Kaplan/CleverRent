<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Maintenance Request"
        android:id="@+id/maintenanceTitleLabel"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Status"
        android:id="@+id/maintenanceStatusLabel"
        android:layout_below="@+id/maintenanceTitleLabel"
        android:layout_alignLeft="@+id/maintenanceTitleLabel"
        android:layout_alignStart="@+id/maintenanceTitleLabel"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:textSize="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="mm/dd/yy"
        android:id="@+id/maintenanceDateLabel"
        android:layout_alignBaseline="@+id/maintenanceTitleLabel"
        android:layout_alignBottom="@+id/maintenanceTitleLabel"
        android:layout_toRightOf="@+id/maintenanceTitleLabel"
        android:layout_toEndOf="@+id/maintenanceTitleLabel"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:textSize="15dp" />
</RelativeLayout>